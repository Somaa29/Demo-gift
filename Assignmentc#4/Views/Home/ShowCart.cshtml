@model IEnumerable<Assignmentc_4.Models.Product>

@{
    ViewData["Title"] = "ShowCart";
}

<h1>Giỏ Hàng</h1>

<p>
    <a asp-action="Create"></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuongTon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)đ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongTon)
            </td>
            <td>
                <img src="@item.ImgUrl" style="width: 100px; height: 100px;"/>
                @*@Html.DisplayFor(modelItem => item.ImgUrl)*@
            </td>
            <td>
                @if (item.Status == 0) {
                    <span>Còn Hàng</span>
                } else {
                    <span>Hết Hàng</span>
                }
               @* @Html.DisplayFor(modelItem => item.Status)*@
            </td>
            <td>
               @* @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Xóa", "DeleteCart", new { id = item.Id })
            </td>
        </tr>    
}
    </tbody>
</table>
<tr>
        <td align="center" colspan="6">
            Tổng Tiền: 
        </td>
        <td>
            @ViewBag.total đ
        </td>
        </tr>
