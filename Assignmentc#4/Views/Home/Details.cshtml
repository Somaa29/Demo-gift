@using System.Globalization;
@model Assignmentc_4.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Chi Tiết Sản Phẩm</h1>

<div class="Content"> 
    <div class="row">
    @*phần 1*@
    <div class="col-md-6">
        <div class="card">
	    <div class="img-big-wrap">
	        <div>
            <a href="#"><img src="@Model.ImgUrl" style="width: 450px; height: 450px;"/></a>                         
            </div>
	    </div> 
        </div> 
	</div>

    @*phần 2*@
	<div class="col-md-6">

    <div class="phan2">
    <h3 class="title mt-3">@Model.Name </h3>

    <div class="mb-3"> 
	    <var class="price h4">@Model.Price VNĐ </var>
    </div>

    @*Số lượng tồn*@
    <p>Số Lượng Tồn: @Model.SoLuongTon</p>
        @*Trang Thái*@
        <dt class="col-sm-4">Trang Thái</dt>
        <dd class="col-sm-8">
                @if (Model.Status == 0)
                {
                    <span>Còn Hàng</span>
                }
                else
                {
                    <span>Hết Hàng</span>
                }
        </dd>
    </dl>
		</div> 
	</div> 
  
	</div> 
    </div>
</div> 
</div>
<div>
    @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>|*@
    @Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", new { id = Model.Id })
</div>